-
  const cardAr = [
    {
      id: "0",
      class: "products__item--small",
      name: "кабельная арматура",
      chars: "1-35 кВ",
      imgB: "./assets/images/cards/pic-4.png",
      imgM: "./assets/images/cards/pic-4m.png",
      big: false,
    },
    {
      id: "1",
      class: "products__item--big",
      name: "Высоковольтная кабельная арматура",
      chars: "110 - 500 кВ",
      imgB: "./assets/images/cards/pic-5.png",
      imgM: "./assets/images/cards/pic-5m.png",
      big: true,
    },
    {
      id: "2",
      class: "products__item--small",
      name: "Арматура для СИП",
      chars: "0,4 кВ и 6-35 кВ",
      imgB: "./assets/images/cards/pic-6.png",
      imgM: "./assets/images/cards/pic-6m.png",
      big: false
    },
  ];

section.section.products
  .products__site-container
    .products__heading
      h2.products__title Продукция

      .products__stamp.stamp
        +icon-multi('stamp-bracket-1')
        .stamp__body
          span.stamp__number 2 000+
          span.stamp__text наименований

        +icon-multi('stamp-bracket-2')

    .products__body
      for item in cardAr
        .products__item(class= item.class)
          a.products__card.card(href="#", id="", class= item.big ? "card--big" : "" )
            .card__body
              .card__header
                p.card__name= item.name
                span.card__chars= item.chars

              .card__icon
                +icon-multi('card-icon')

              .card__image
                picture
                  source(srcset=item.imgM media="(max-width: 769px)" alt="")
                  source(srcset=item.imgB alt="")
                  img(src=item.imgB alt="")


    .products__add
      a.products__add-btn.button.button--biggest.button--outlined-low(href="#") Весь каталог
