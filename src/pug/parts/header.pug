-
  const menus = [
    {text: "Продукция", link: "./catalog.html", isActiveClass: catalogActive},
    {text: "Реализованные проекты", link: "./projects.html", isActiveClass: projectsActive},
    {text: "О компании", link: "./about.html", isActiveClass: aboutActive},
    {text: "Контакты", link: "./contacts.html", isActiveClass: contactsActive},
  ];

- const svgs = ['vk', 'tg', 'yt'];

- const breadcrubmsClass = 'header__breadcrumbs';

header.header(class=headerAnimimatable ? "header-is-animated" : '')
  .header__site-container
    .header__col
      +logo(class="header__logo")

      .header__menu.menu.hide-on-mobile(class=isMainPage ? "js-hover-opacity" : '')
        for item in menus
          a.menu__link.js-hover-link(href= item.link, class=item.isActiveClass ? 'menu__link--active' : '', class=!isMainPage ? "menu__link--hover" : '')= item.text

    .header__col.header__col--controls
      .header__desktop-nav.hide-on-mobile
        .header__search
          a.btn-search(href="./search.html")
            +icon-multi('search')

          button.button.js-callback-modal-open(type="button") оставить заявку

        if isSearchIsOpen
          a.header__burger-btn.burger-menu(href="javascript:history.back()")
            +icon-multi('burger-lines')
            +icon-multi('burger-cross')
        else
          button.header__burger-btn.header__burger-btn.burger-menu.js-burger-menu(type="button")
            +icon-multi('burger-lines')
            +icon-multi('burger-cross')

      .header__mobile-nav.show-on-mobile
        button.small-button.small-button--outlined.js-callback-modal-open(type="button") заявкa

        if isSearchIsOpen
          a.menu-btn.header__mobile-menu(href="javascript:history.back()")
            +icon-multi('mob-burger')
            +icon-multi('mob-close')
        else
          button.menu-btn.header__mobile-menu.js-mobile-menu-open(type="button")
            +icon-multi('mob-burger')
            +icon-multi('mob-close')

    .header__desktop-menu.hide-on-mobile
      include desktop-menu.pug

    .header__callback-modal
      include callback-modal.pug

    .header__search-modal
      include search-modal.pug

  include breadcrumbs.pug
